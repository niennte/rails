<%= form_with(url: login_path, scope: :session, local: true) do |form| %>

    <% unless flash[:error].nil? || flash[:error].empty? %>
        <div class="error">
            <%= flash[:error] %>
        </div>
    <% end %>

    <div class="actions">
        <%= form.label :email %>
        <%= form.email_field :email, id: 'session_email' %>

        <%= form.label :password %>
        <%= form.password_field :password, id: 'password' %>

        <%= form.submit "Log in"%>

    </div>

<% end %>