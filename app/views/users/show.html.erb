<p id="notice"><%= notice %></p>

<h3>
    User: <%= @user.name %>
    <%= image_tag @user.avatar.url(:thumb) %>
</h3>

<% @user.posts.each do |post| %>
    <h2><%= link_to post.title, post %></h2>
    <% if post.photo.present? %>
        <p><%= image_tag post.photo.url(:thumb) %></p>
    <% end %>
    <p><%= post.body.truncate(100) %></p>
<% end %>